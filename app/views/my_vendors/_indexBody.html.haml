#details
  #detailsPageHeader
    %h1.item_name
      = "All Vendors"

#letter-nav-padding
#notice{class: flash[:type]}
  = flash[:message]
%table#index
  %tbody

    #image
    %img.imageNoText{ src: 'https://jobganic.com/wp-content/uploads/2017/12/young-female-organic-farmer.jpg', width:"571" , height:"381"}

    #story
      %h5.subhead
      %p.subheadtext.storytext
        = "Diversity helps businesses and communities thrive. Itâ€™s that simple. When there are more options,
        more voices and more ideas, there are more opportunities for business excellence. We pride ourselves in having diverse and unique vendors. You can find a full list of our vendors below."

    - ('A'..'Z').to_a.each do |letter|
      - items_with_letter = myclass.where("name LIKE ?", "#{letter}%")
      = render 'singleSymbolItems', items: items_with_letter, sym: letter, admin: admin, myclass: myclass
    - items_with_nonletter = myclass.where("name < 'A'")
    = render 'singleSymbolItems', items: items_with_nonletter, sym: 1, admin: admin, myclass: myclass

