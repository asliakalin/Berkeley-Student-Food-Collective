= render 'header', currentPage: 'myvendor', admin: false
#details
  #detailsPageHeader
    %h1.item_name
      = @vendor.name
      -if current_admin
        .edit_button
          %a{href: edit_my_vendor_path(@vendor)} Edit
      - if not @vendor.address.empty?
        #addr
          = link_to @vendor.address, map_my_vendors_path(id: @vendor.id)
    #socialButtons
      = render 'details_social_buttons' 

  -#content
  = render 'all_content'

