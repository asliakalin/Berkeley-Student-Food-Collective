#details
  #detailsPageHeader
    %h1.item_name
      = "Vendors By Category"

#letter-nav-padding
#notice{class: flash[:type]}
  = flash[:message]
%table#index
  %tbody

    - if @picture == nil?
      #image
        %img.imageNoText{ src: 'https://www.nofany.org/images/Soul_Fire_farm_copy_copy.jpg', width:"571" , height:"381"}
    - else
      #image
        %img.imageNoText{ src: @picture, width:"571" , height:"381"}

    - if @description == nil?
      #story
        %h5.subhead
          %p.subheadtext.storytext
            = "All Vendor Tags:"
    - else
      #story
        %h5.subhead
          %p.subheadtext.storytext
            = @description

    - ('A'..'Z').to_a.each do |letter|
      - items_with_letter = ProducerTag.where("name LIKE ?", "#{letter}%")
      = render 'singleSymbolItems', items: items_with_letter, sym: letter, admin: admin, myclass: ProducerTag
    - items_with_nonletter = myclass.where("name < 'A'")
    = render 'singleSymbolItems', items: items_with_nonletter, sym: 1, admin: admin, myclass: myclass

