= render 'header', currentPage: 'my_product'
#details
  #detailsPageHeader
    %h1.item_name
      = @product.name
    #editHeader
    %button.edit_button
      =button_to 'Edit', edit_my_product_path(@product), method: :get
    #socialButtons
      - @tags.each do |t|
        - items_with_letter = ProductTag.where(id: t)
        = render 'singleSymbolItems', items: items_with_letter, sym: "A", admin: false, myclass: ProductTag
  = render 'all_content'