= render 'header', currentPage: 'my_product', admin: false
#details
  #detailsPageHeader
    %h1.item_name
      = @product_tag.name

#letter-nav-padding
#notice{class: flash[:type]}
  = flash[:message]
%table#index
  %tbody

    #image
      -##findmeandfix
    %img.imageNoText{ src: 'https://images-na.ssl-images-amazon.com/images/I/41CyuoxrPvL._SX425_.jpg', width:"571" , height:"381"}

    #story
      %h5.subhead
      %p.subheadtext.storytext
        = @product_tag.description

    - @tags.each do |v|
      - items_with_letter = MyProduct.where(id: v)
      = render 'singleSymbolItems', items: items_with_letter, sym: "A", admin: false, myclass: MyProduct


= render 'footer', currentPage: 'my_product', admin: false