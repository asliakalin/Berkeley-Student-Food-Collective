= render 'header', currentPage: 'my_product', admin: false
#details
  #detailsPageHeader
    %h1.item_name
      = @product_tag.name

#letter-nav-padding
#notice{class: flash[:type]}
  = flash[:message]
%table#index
  %tbody

    #image
      -#doesn't work when you do @product_tag.picture for some reason
      %img.imageNoText{ src: 'https://images.theconversation.com/files/277221/original/file-20190530-69079-1uozmb5.jpg?ixlib=rb-1.1.0&q=45&auto=format&w=496&fit=clip', width:"571" , height:"381"}

    #story
      %h5.subhead
      %p.subheadtext.storytext
        = @product_tag.description

    - @tags.each do |v|
      - items_with_letter = MyProduct.where(id: v)
      = render 'singleSymbolItems', items: items_with_letter, sym: "A", admin: false, myclass: MyProduct


= render 'footer', currentPage: 'my_product', admin: false