#notice{class: flash[:type]}
  = flash[:message]

%h1 Add New Tagging Category for Products
= form_for [@tag_category] do |f|
  #form_elements_div
  
    .form_group.element_div
      = f.label :name
      = f.text_field :name, style: 'text-transform: capitalize;'

    .form_group.element_div
      = f.label :description
      = f.text_field :description


    #submit_div.form_group
      = f.submit class: 'btn btn-success'
      = button_tag 'Cancel', type: :button, onclick: 'confirmTagCancel()', id: :cancel_button, class: 'btn btn-danger'
